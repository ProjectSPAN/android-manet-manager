#!/system/bin/sh
while true; do
	sleep 2
	/data/data/android.adhoc.manet/bin/iwconfig $1 | while read l; do 
		case "$l" in *ESSID*) 
			case "$l" in *\"$2\"*)
				break;
			esac;
			/data/data/android.adhoc.manet/bin/iwconfig $1 mode Ad-Hoc
			/data/data/android.adhoc.manet/bin/iwconfig $1 essid $2
			/data/data/android.adhoc.manet/bin/iwconfig $1 channel $3
			break; 
		esac; 
		break;
	done
done
